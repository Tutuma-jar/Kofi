<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/contenedor_pedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/beige_medio"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:id="@+id/numero_pedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PEDIDO 34"
                style="@style/titulos"/>

            <TextView
                android:id="@+id/nombre_pedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre: PÃ©rez"
                style="@style/texto"/>

            <TextView
                android:id="@+id/text_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total de Items: 5"
                style="@style/texto"/>

            <TextView
                android:id="@+id/text_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: 25.50 Bs."
                style="@style/texto"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:switchMinWidth="60dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_ver_detalles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ver_detalles"
                android:textSize="14sp"
                style="@style/botones_azules"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>