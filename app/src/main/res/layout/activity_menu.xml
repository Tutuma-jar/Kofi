<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige_claro"
    android:padding="16dp"
    tools:context=".MenuActivity">


    <TextView
        android:id="@+id/menu_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENÃš"
        style="@style/titulos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:background="@color/beige_claro"
        app:layout_constraintTop_toTopOf="@id/comanda_titulo"
        app:layout_constraintBottom_toBottomOf="@id/comanda_titulo"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu"
        android:background="@color/beige_claro"
        app:layout_constraintTop_toTopOf="@id/menu_titulo"
        app:layout_constraintBottom_toBottomOf="@id/menu_titulo"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/separador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08"/>

    <GridLayout
        android:id="@+id/categoriaGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="4"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/separador"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/categoria1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/menu"/>

        <ImageButton
            android:id="@+id/categoria2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:src="@drawable/menu"/>

        <ImageButton
            android:id="@+id/categoria3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:src="@drawable/menu"/>

        <ImageButton
            android:id="@+id/categoria4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="2"
            android:layout_rowWeight="2"
            android:src="@drawable/menu"/>

        <ImageButton
            android:id="@+id/categoria5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="3"
            android:layout_rowWeight="1"
            android:src="@drawable/menu"/>

        <ImageButton
            android:id="@+id/categoria6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="3"
            android:layout_rowWeight="2"
            android:src="@drawable/menu"/>

        <ImageButton
            android:id="@+id/categoria7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="4"
            android:layout_rowWeight="1"
            android:src="@drawable/menu"/>

        <ImageButton
            android:id="@+id/categoria8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="4"
            android:layout_rowWeight="2"
            android:src="@drawable/menu"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>