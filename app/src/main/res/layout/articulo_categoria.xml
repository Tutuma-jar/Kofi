<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!-- CONTENEDOR HORIZONTAL PRINCIPAL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- COLUMNA IZQUIERDA -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3.5">
            <TextView
                android:id="@+id/tvNombreArticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sandwich Club"
                android:paddingBottom="5dp"/>
            <TextView
                android:id="@+id/tvDescripcionArticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sándwich de tres capas con pollo, tocino, lechuga fresca, tomate y mayonesa, servido en pan tostado y cortado en triángulos. Un clásico crujiente y abundante."
                android:paddingBottom="5dp"/>
            <TextView
                android:id="@+id/tvPrecioArticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40 Bs."
                android:paddingBottom="5dp"/>
        </LinearLayout>
        <!-- COLUMNA DERECHA (IMAGEN) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:gravity="center">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/food_1_svgrepo_com" />
        </LinearLayout>
    </LinearLayout>
    <!-- LÍNEA INFERIOR -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C0C0C0"/>
</LinearLayout>
