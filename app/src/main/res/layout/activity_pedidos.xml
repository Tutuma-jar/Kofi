<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PedidosActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/beige_claro"
        android:padding="16dp">

        <TextView
            android:id="@+id/pedidos_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PEDIDOS"
            style="@style/titulos"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:background="@color/beige_claro"
        app:layout_constraintTop_toTopOf="@id/pedidos_titulo"
        app:layout_constraintBottom_toBottomOf="@id/pedidos_titulo"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu"
        android:background="@color/beige_claro"
        app:layout_constraintTop_toTopOf="@id/pedidos_titulo"
        app:layout_constraintBottom_toBottomOf="@id/pedidos_titulo"
        app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/separador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.08"/>

        <LinearLayout
            android:id="@+id/filtro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/separador"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <Button
                android:id="@+id/btn_todo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Todo"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_listo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Listo"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/btn_pendiente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pendiente"
                android:layout_weight="1"/>
        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/filtro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navViewContainer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/bg_drawer_custom"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/profileSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_circle_beige"
                android:text="KOFI"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">
                <TextView
                    android:text="KOFI"
                    android:textColor="@color/texto_blanco"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Hola, usuario!"
                    android:textColor="@color/texto_blanco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/profileSection">

            <LinearLayout
                android:id="@+id/nav_btn_inicio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/ic_home"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/beige_medio"/>
                <TextView
                    android:text="Inicio"
                    android:textColor="@color/texto_blanco"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_btn_menu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/ic_menu_book"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/beige_medio"/>
                <TextView
                    android:text="Menú"
                    android:textColor="@color/texto_blanco"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_btn_pedidos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_item_selected"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/ic_orders"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/beige_medio"/>
                <TextView
                    android:text="Pedidos"
                    android:textColor="@color/beige_claro"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_btn_comanda"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/ic_add_circle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/beige_medio"/>
                <TextView
                    android:text="Nueva Comanda"
                    android:textColor="@color/texto_blanco"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sun"
                    app:tint="@color/beige_medio" />
                <TextView
                    android:text="Modo oscuro"
                    android:textColor="@color/texto_blanco"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="@color/beige_claro"
                    android:trackTint="#A0A0A0"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_beige"
                android:text="CERRAR SESIÓN"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By: Tap &amp; Serve"
                android:textColor="@color/texto_blanco"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>